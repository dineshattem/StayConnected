<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#ce545454"
    android:gravity="center"
    android:paddingBottom="100dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="100dp" >

    <RelativeLayout
        android:id="@+id/rl_main_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="jimsky"
            android:textColor="#545454"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="25/5/2015"
            android:textColor="#545454"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tv_grpname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="GROUP"
            android:textColor="#545454"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:id="@+id/sep11"
            android:layout_width="fill_parent"
            android:layout_height="0.75dp"
            android:layout_below="@+id/tv_contact"
            android:layout_marginTop="5dp"
            android:background="#cecece" />

        <RelativeLayout
            android:id="@+id/rl_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sep11"
            android:layout_marginTop="10dp"
            android:background="#22545454"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Call Every"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_interva_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_call"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_int_plus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_int_val"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#545454"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_int_minus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_interva_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_call"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll_interva_count"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_int_plus1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_int_val1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Minut"
                    android:textColor="#545454"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_int_minus1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/sep1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/rl_edit"
            android:layout_marginTop="5dp"
            android:background="#cecece" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/sep1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Cancel"
            android:textColor="#65cbbb" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sep1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="Save"
            android:textColor="#65cbbb" />
    </RelativeLayout>

</RelativeLayout>