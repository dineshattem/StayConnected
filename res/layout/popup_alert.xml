<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:tag="200"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/sep"
        android:layout_width="fill_parent"
        android:layout_height="0.75dp"
        android:layout_marginTop="2dp"
        android:background="#cecece" />

    <EditText
        android:id="@+id/txtMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:hint="Enter Group name"
        android:padding="7dp"
        android:singleLine="true"
        android:tag="100"
        android:textColor="#000000"
        android:textSize="14dp" />
    
    <RelativeLayout
            android:id="@+id/rl_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sep11"
            android:layout_marginTop="10dp"
            android:background="#22545454"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Call Every"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_interva_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_call"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_int_plus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_int_val"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#545454"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_int_minus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_interva_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_call"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ll_interva_count"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_int_plus1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="+"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_int_val1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Minut"
                    android:textColor="#545454"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/tv_int_minus1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="#65cbbb"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="-"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/save"
            android:tag="200"
            android:text="Yes"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRite"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/play"
            android:tag="200"
            android:text="No"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>